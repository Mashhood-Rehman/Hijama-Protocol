generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  images      String[] @default([])
  details     String[] @default([])
  stock       Int      @default(0)
  status      String   @default("Draft")
  pdf         String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
